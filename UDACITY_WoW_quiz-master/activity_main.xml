<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="World of Warcraft Quiz"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="26sp"
        android:background="#000000"
        android:layout_margin="16dp"/>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backimage">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#994400"
                android:layout_margin="16dp">
                <TextView
                    android:id="@+id/q1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:textSize="18sp"
                    android:text="1) Who was the first LvL 60 character ever? (Hint: warrior)"
                    android:textColor="#FFFFFF"/>
                <EditText
                    android:id="@+id/inputQ1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/q1"
                    android:textColor="#FFFFFF"
                    android:capitalize="characters"
                    android:inputType="text" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#994400"
                android:layout_margin="16dp">
                <TextView
                    android:id="@+id/q2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:textSize="18sp"
                    android:text="2) Which class is a healer?"
                    android:textColor="#FFFFFF"/>
                <RadioGroup
                    android:id="@+id/radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/q2">

                    <RadioButton
                        android:id="@+id/inputQ2B1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FFFFFF"
                        android:text="Warlock"/>
                    <RadioButton
                        android:id="@+id/inputQ2B2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FFFFFF"
                        android:text="Shaman"/>
                    <RadioButton
                        android:id="@+id/inputQ2B3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FFFFFF"
                        android:text="Rogue"/>
                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#994400"
                android:layout_margin="16dp">
                <TextView
                    android:id="@+id/q3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:textSize="18sp"
                    android:text="3) Which faction(s) belongs to the Horde?"
                    android:textColor="#FFFFFF"/>
                <CheckBox
                    android:id="@+id/inputQ3B1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/q3"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:text="Troll"/>
                <CheckBox
                    android:id="@+id/inputQ3B2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/q3"
                    android:layout_toRightOf="@+id/inputQ3B1"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:text="Human"/>
                <CheckBox
                    android:id="@+id/inputQ3B3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/q3"
                    android:layout_toRightOf="@+id/inputQ3B2"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:text="Orc"/>
                <CheckBox
                    android:id="@+id/inputQ3B4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/q3"
                    android:layout_toRightOf="@+id/inputQ3B3"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:text="Draenei"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#994400"
                android:layout_margin="16dp">
                <TextView
                    android:id="@+id/q4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:textSize="18sp"
                    android:text="4) What was the maximum level in Burning Crusade expansion?"
                    android:textColor="#FFFFFF"/>
                <EditText
                    android:id="@+id/inputQ4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/q4"
                    android:textColor="#FFFFFF"
                    android:capitalize="characters"
                    android:inputType="number" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#994400"
                android:layout_margin="16dp">
                <TextView
                    android:id="@+id/q5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:textSize="18sp"
                    android:text="5) Which class(s) came with an expansion?"
                    android:textColor="#FFFFFF"/>
                <CheckBox
                    android:id="@+id/inputQ5B1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/q5"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:text="Deathknight"/>
                <CheckBox
                    android:id="@+id/inputQ5B2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/q5"
                    android:layout_toRightOf="@+id/inputQ5B1"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:text="Druid"/>
                <CheckBox
                    android:id="@+id/inputQ5B3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/q5"
                    android:layout_toRightOf="@+id/inputQ5B2"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:text="Hunter"/>
                <CheckBox
                    android:id="@+id/inputQ5B4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/q5"
                    android:layout_toRightOf="@+id/inputQ5B3"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:text="Monk"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit Answers"
                    android:onClick="submitter"
                    android:backgroundTint="#000000"
                    android:textColor="#994400"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>