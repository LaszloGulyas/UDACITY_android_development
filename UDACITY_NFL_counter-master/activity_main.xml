<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="udacity.lgulyas.project2.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nfl"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/team1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentLeft="true"
            android:text="Team1"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/team1score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/team1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/team2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:text="Team2"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/team2score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/team2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/t1p7"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:text="7"
            android:layout_alignParentBottom="true"
            android:background="#DD1129"
            android:onClick="addPointT1" />

        <Button
            android:id="@+id/t1p8"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="8"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/t1p7"
            android:background="#DD1129"
            android:onClick="addPointT1" />

        <Button
            android:id="@+id/t1p3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="3"
            android:layout_above="@id/t1p7"
            android:background="#DD1129"
            android:onClick="addPointT1" />

        <Button
            android:id="@+id/t1p6"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:text="6"
            android:layout_toRightOf="@id/t1p3"
            android:layout_above="@id/t1p8"
            android:background="#DD1129"
            android:onClick="addPointT1" />

        <Button
            android:id="@+id/t2p8"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="8"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#000066"
            android:onClick="addPointT2" />

        <Button
            android:id="@+id/t2p7"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:text="7"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/t2p8"
            android:background="#000066"
            android:onClick="addPointT2" />

        <Button
            android:id="@+id/t2p6"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:text="6"
            android:layout_above="@id/t2p8"
            android:layout_alignParentRight="true"
            android:background="#000066"
            android:onClick="addPointT2" />

        <Button
            android:id="@+id/t2p3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="3"
            android:layout_above="@id/t2p7"
            android:layout_toLeftOf="@id/t2p6"
            android:background="#000066"
            android:onClick="addPointT2" />

        <Button
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:text="RESET"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="reset" />

    </RelativeLayout>

</RelativeLayout>